<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/play_icon1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:scaleType="center"
        android:scaleX="0.3"
        android:scaleY="0.3"
        android:src="@drawable/arrow"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:orientation="vertical">

        <TextView
            android:id="@+id/author"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="70dp"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/des"
            android:textColor="@android:color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="60dp"
            android:layout_marginEnd="70dp"
            android:textSize="20sp"/>
    </LinearLayout>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:lottie_fileName="heart_animation.json"/>

    <LinearLayout
        android:layout_width="56dp"
        android:layout_height="150dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="15dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp">

            <ImageView
                android:id="@+id/beforelike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart_blank" />

            <ImageView
                android:id="@+id/afterlike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/heart_fill"
                android:visibility="invisible" />
        </FrameLayout>

        <TextView
            android:id="@+id/like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/white"
            android:text="nvgngg"/>

        <ImageView
            android:id="@+id/iv_comment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/icon_video_commit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment_count"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="#FFFFFF"
        android:layout_gravity="bottom"
        android:id="@+id/comment"
        android:visibility="gone">

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/close_comment"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="9dp"
                    android:src="@drawable/back_down" />

            </LinearLayout>

            <TextView
                android:id="@+id/total_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="全部评论(253)"
                android:textColor="#FF333333"
                android:textSize="13sp" />
        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/rl_bottom"
            android:layout_below="@id/rl_title">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="-7dp" />
        </ScrollView>

        <RelativeLayout
            android:id="@+id/rl_bottom"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FFFFFF"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/comment_content"

                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_toStartOf="@+id/tv_send"
                android:background="@drawable/shape_gray"
                android:fadeScrollbars="true"
                android:focusableInTouchMode="true"
                android:lineSpacingExtra="2dp"
                android:maxLines="4"
                android:minHeight="36dp"
                android:padding="10dp"
                android:scrollbars="vertical"
                android:textCursorDrawable="@drawable/im_edit_cursor"
                android:textColor="#000000"
                android:textSize="13sp"
                android:clickable="false"
                android:focusable="false"
                android:autofillHints=""
                android:textAlignment="viewStart" />

            <TextView
                android:id="@+id/tv_send"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/shape_rec_yellow_type1"
                android:gravity="center"
                android:text="发送"
                android:textColor="#FF151515"
                android:textSize="12sp"
                android:clickable="true"
                android:focusable="true" />
        </RelativeLayout>
    </RelativeLayout>
</FrameLayout>